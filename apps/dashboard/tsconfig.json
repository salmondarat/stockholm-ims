{
  "extends": "../../packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@stockholm/db": ["../../packages/db/src"],
      "@stockholm/config": ["../../packages/config/src"],
      "@stockholm/config/*": ["../../packages/config/src/*"],
      "@stockholm/utils": ["../../packages/utils/src"]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
