{
  "name": "stockholm",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"./apps/*\" run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "typecheck": "pnpm -r --parallel typecheck",
    "prisma:generate": "pnpm -F @stockholm/db run generate",
    "prisma:migrate:dev": "pnpm -F @stockholm/db run migrate:dev",
    "prisma:migrate:deploy": "pnpm -F @stockholm/db run migrate:deploy",
    "prisma:studio": "pnpm -F @stockholm/db run studio"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "zod": "^4.1.1"
  },
  "pnpm": {
    "overrides": {}
  }
}
