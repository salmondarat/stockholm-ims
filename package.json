{
  "name": "stockholm",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"./apps/*\" run dev",
    "build": "turbo run build",
    "deploy:vercel": "pnpm dlx vercel --prod --yes && pnpm dlx vercel --cwd apps/website --prod --yes",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "pnpm typecheck",
    "typecheck": "pnpm -r --parallel typecheck",
    "prisma:generate": "pnpm -F @stockholm/db run generate",
    "prisma:migrate:dev": "pnpm -F @stockholm/db run migrate:dev",
    "prisma:migrate:deploy": "pnpm -F @stockholm/db run migrate:deploy",
    "prisma:studio": "pnpm -F @stockholm/db run studio"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {},
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
